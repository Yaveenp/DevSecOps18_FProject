{
  "dashboard": {
    "id": null,
    "title": "Flask + Container Metrics",
    "timezone": "browser",
    "panels": [
      {
        "type": "graph",
        "title": "Request Duration (avg/sec)",
        "targets": [
          {
            "expr": "rate(http_request_duration_seconds_sum[1m]) / rate(http_request_duration_seconds_count[1m])",
            "interval": "",
            "legendFormat": "avg duration",
            "refId": "A"
          }
        ],
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 }
      },
      {
        "type": "graph",
        "title": "HTTP Requests by Endpoint",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[1m])) by (endpoint)",
            "legendFormat": "{{endpoint}}",
            "refId": "B"
          }
        ],
        "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 }
      },
      {
        "type": "graph",
        "title": "CPU Usage (%)",
        "targets": [
          {
            "expr": "container_cpu_usage_percent",
            "legendFormat": "CPU %",
            "refId": "C"
          }
        ],
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 }
      },
      {
        "type": "graph",
        "title": "Memory Usage (Bytes)",
        "targets": [
          {
            "expr": "container_memory_usage_bytes",
            "legendFormat": "Memory",
            "refId": "D"
          }
        ],
        "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 }
      }
    ],
    "schemaVersion": 16,
    "version": 1
  },
  "overwrite": true
}